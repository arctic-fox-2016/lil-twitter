extends layout

block content
    nav.navbar.navbar-dark.bg-primary

        button.navbar-toggler.hidden-sm-up(type='button', data-toggle='collapse', data-target='#collapseEx2')
            i.fa.fa-bars
        .container
            // Collapse content
            #collapseEx2.collapse.navbar-toggleable-xs
                // Navbar Brand
                a.navbar-brand Little Tweeter
                // Links
                ul.nav.navbar-nav
                    li.nav-item.active
                        a.nav-link
                            | Home 
                            span.sr-only (current)
                    li.nav-item
                        a.nav-link Add Tweet
                    li.nav-item
                        a.nav-link Tweets list

                form.form-inline
                    input.form-control(type='text', placeholder='Search Hashtag')

    .container
        .jumbotron
            .row
                #tweets.col-md-6.col-md-offset-3
                    .card.text-xs-center
                        .card-header.default-color-dark.white-text
                            | Sahbana
                        .card-block
                            h4.card-title #firsttweet #introduction
                            p.card-text Hello Everybody nice to meet you all

                        .card-footer.text-muted.default-color-dark.white-text
                            p Mon Oct 24 2016 08:38:49 GMT+0700 (WIB)
            .row
                #newtweet.col-md-6.col-md-offset-3
                    .card
                        .card-block
                            // Header
                            .text-xs-center
                                h3
                                    i.fa.fa-pencil
                                    |  Add New Tweets
                                hr.m-t-2.m-b-2
                            // Body
                            p We'll write rarely, but only the best content.
                            br
                            // Body
                            .md-form
                                i.fa.fa-user.prefix
                                input#form3.form-control(type='text')
                                label(for='form3') Your name
                            .md-form
                                i.fa.fa-envelope.prefix
                                input#form2.form-control(type='text')
                                label(for='form2') Your email
                            .text-xs-center
                                button.btn.btn-deep-orange Send

block script
